{
  "manifest_version": 3,
  "name": "Temporitzador de descansos (p5.js)",
  "version": "1.0.0",
  "description": "Extensi√≥ de Firefox amb p5.js per gestionar descansos amb una flor animada.",
  "author": "Evelyn Rosado Romero",

  "action": {
    "default_popup": "popup.html",
    "default_title": "Temporitzador de descansos"
  },

  "icons": {
    "48": "assets/icon48.png"
  },

  "permissions": [
    "storage",
    "notifications"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "minuts-jardi@uoc-evelyn",
      "strict_min_version": "109.0"
    }
  }
}
